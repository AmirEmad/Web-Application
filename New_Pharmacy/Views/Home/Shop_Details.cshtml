@model dynamic

<!-- Product section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="/Uploads/@Model.pro.Image" alt="@Model.pro.Name" /></div>
            <div class="col-md-6">
                <div class="small mb-1">@Model.pro.Cat.Name</div>
                <h1 class="display-5 fw-bolder">@Model.pro.Name</h1>
                <div class="fs-5 mb-5">
@*                    <span class="text-decoration-line-through"></span>
*@                    <span>@Model.pro.Price L.E</span>
                </div>
                <p class="lead">Lorem ipsum dolor sit amet consectetur adipisicing elit. Praesentium at dolorem quidem modi. Nam sequi consequatur obcaecati excepturi alias magni, accusamus eius blanditiis delectus ipsam minima ea iste laborum vero?</p>
                <div class="d-flex">
                    <input class="form-control text-center me-3" id="inputQuantity" type="num" value="@Model.pro.Quantity" style="max-width: 4rem" title="Quentity" disabled />
                    <button class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"></i>
                        Add to cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</section  >

<!-- Related items section-->
<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">@Model.pro.Cat.Name products</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (Category item in Model.catlist)
            {
                @foreach (var proitem in item.Products)
                {
                    if (proitem.CatId==item.Id)
                    {
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img class="card-img-top" src="/Uploads/@proitem.Image" style="height:200px;" alt="@proitem.Name" />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">@proitem.Name Product</h5>
                                        <!-- Product price-->
                                        @proitem.Price L.E
                                </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="Shop_Details" asp-route-id="@proitem.Id" >View options</a></div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
            
  </div>
    </div>
</section>

