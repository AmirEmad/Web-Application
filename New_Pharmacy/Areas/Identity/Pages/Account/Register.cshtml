@page
@model RegisterModel
<title>Register</title>

@*<h1>@ViewData["Title"]</h1>*@
<div class="main">
    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    <form method="POST" asp-route-returnUrl="@Model.ReturnUrl" class="register-form" id="register-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                         
                        <div class="form-group form-floating">
                            <label asp-for="Input.Email"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Your Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group form-floating">
                            <label asp-for="Input.Password"><i class="zmdi zmdi-lock"></i></label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group form-floating">
                            <label asp-for="Input.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Repeat your password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" id="registerSubmit" class="form-submit w-100 btn btn-lg btn-primary" value="Register" />

                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="~/assets/loginForm/images/signup-image.jpg" alt="sing up image"></figure>
                    <a href="/Identity/Account/Login" class="signup-image-link">I am already member</a>
                </div>
            </div>
        </div>
    </section>
</div>
