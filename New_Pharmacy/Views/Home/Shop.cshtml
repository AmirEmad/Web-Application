 @model IEnumerable<Category>
 <!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                @foreach (var proitem in item.Products)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="/Uploads/@proitem.Image" alt="@proitem.Name" style="height:200px;" />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@proitem.Name</h5>
                                    <!-- Product price-->
                                    @proitem.Price L.E
                        </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="Shop_Details" asp-route-id="@proitem.Id">View options</a></div>
                            </div>
                        </div>
                    </div>

                }

            }

        </div>
    </div>
</section>
<!-- Footer-->
