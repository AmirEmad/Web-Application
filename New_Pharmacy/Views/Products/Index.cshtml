@model IEnumerable<New_Pharmacy.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div id="footer" style="background-color: white;">
                <div class="row">
                <center>
                    <div class="col-lg-4 col-md-6 footer-newsletter">
                <form action="Search" method="post">
                            <input type="search" name="term"><input type="submit" value="Search">
                        </form>
                        <br />
                    </div>
                    </center>
                </div>
    </div>
<table class="table table-hover ">
    <div class="section-title" data-aos="fade-left">
        <h2>Products</h2>
        <p >
            <a class="btn btn-success" asp-action="Create">Create New</a>
            <a asp-action="Index" class="btn btn-primary">All Products</a>
        </p>
    </div>
    
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PubDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PubDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    <img src="~/Uploads/@item.Image"
                     style="border: 1px solid #ddd;border-radius: 50%;padding: 5px;width: 150px;">
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cat.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
